<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
        <title>Login</title>
    </head>
    <body>
        <section class="w-100 container">
            <div class="mt-3 w-50 mx-auto">
                <h3> Login </h3>
                <form action="">
                    <div>
                        <label class="form-label" for=""> Usuario </label>
                        <input class="form-control" name="username" type="text">
                    </div>
                    <div>
                        <label class="form-label" for=""> Senha </label>
                        <input class="form-control" name="password" type="text">
                    </div>

                    <button class="btn btn-primary mt-2"> login </button>

                    <!-- mensagem de alerta -->
                    <p class="alert alert-success d-none"></p>
                </form>
            </div>
        </section>
    </body>

    <script>
        const user = document.querySelector('input[name="username"]');
        const password = document.querySelector('input[name="password"]');
        const button = document.querySelector('button.btn');
        const alertSuccess = document.querySelector('.alert');

        button.addEventListener('click', (event) => {
            event.preventDefault();
            console.log(user.value);

            if (user.value === 'lucas@teste.com' && password.value === 'senha@123') {
                const message = 'usuario logado';
                alertSuccess.classList.remove('d-none');
                alertSuccess.innerHTML = message;
            } else {
                alertSuccess.classList.add('d-none')
                alertSuccess.innerHTML = '';
            }
        })
    </script>

</html>